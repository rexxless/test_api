# Environment Variables for Laravel API
# Copy this file to ../backend/.env and configure with your values

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel_api
DB_USERNAME=laravel_user
DB_PASSWORD=secure_password_123

# Application Configuration
APP_NAME="Laravel API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# Cache Configuration (using file system)
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Mail Configuration (optional - can be left as default)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration (if using authentication)
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
